{
  "permissions": {
    "allow": [
      "Read(~/.zshrc)",
      "Bash(yarn:*)",
      "Bash(yarn run:*)",
      "Bash(bun:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(curl:*)",
      "Search(*)",
      "Search(pattern:*)",
      "Search(pattern:*, include:*)",
      "Read(*)",
      "Edit(*)",
      "Write(*)"
    ],
    "ask": [
      "Read(./.env*)",
      "Read(./secrets/**)",
      "Read(./**/credentials*)",
      "Bash(rm -rf:*)"
    ],
    "defaultMode": "plan"
  },
  "alwaysThinkingEnabled": true
}
